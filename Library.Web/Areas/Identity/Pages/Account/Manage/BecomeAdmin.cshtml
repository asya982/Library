@page
@model Library.Web.Areas.Identity.Pages.Account.Manage.BecomeAdminModel
@{
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <form method="post">
        <button class="btn btn-outline-danger" type="submit" disabled=@(User.IsInRole("Admin"))>
            @(User.IsInRole("Admin") ? "You are already admin" : "Become admin")
        </button>
    </form>
</div>
