@page "/login"
@model Library.Web.Pages.User.LoginPageModel
@{
}

<form method="post" class="d-flex flex-column justify-content-center">
	<h1 class="text-center">Welcome back!</h1>
	<div class="form-group mt-5">
		<h5 class="mt-3">Username</h5>
		<input asp-for="LoginModel.Username" class="form-control" />
	</div>

	<div class="form-group mt-3 d-flex gap-5">
		<h5 class="mt-3">Password</h5>
		<input asp-for="LoginModel.Password" class="form-control"  type="password"/>
	</div>
	<button type="submit" class="btn btn-primary btn-lg m-4">Log in</button>
</form>