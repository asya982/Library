@page "/signin"
@model Library.Web.Pages.User.SigninPageModel
@{
}

<form method="post" class="d-flex flex-column justify-content-center">
	<h1 class="text-center">Become a member!</h1>
	<div class="form-group mt-3">
		<h5 class="mt-3">Username</h5>
		<input asp-for="SigninModel.Username" class="form-control" />
	</div>

	<div class="form-group mt-3">
		<h5 class="mt-3">Phone number</h5>
		<input asp-for="SigninModel.PhoneNumber" class="form-control" />
	</div>

	<div class="form-group mt-3">
		<h5 class="mt-3">Password</h5>
		<input asp-for="SigninModel.Password" class="form-control" type="password" />
	</div>

	<div class="form-check form-switch mt-3 align-self-center">
		<input class="form-check-input" type="checkbox" asp-for="SigninModel.IsAdmin">
		<label class="form-check-label" asp-for="SigninModel.IsAdmin">
			@if (Model.SigninModel.IsAdmin)
			{
				@:Librarian
			}
			else
			{
				@:Reader
			}
		</label>
		<p>@Model.SigninModel.IsAdmin</p>
	</div>
	<button type="submit" class="btn btn-primary btn-lg m-4">Sign up</button>
</form>